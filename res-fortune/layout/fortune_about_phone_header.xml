<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fortune_pref_card_sin"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fortune_pref_card_sin"
        android:padding="16dp"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/fortune_flower_logo"
            android:layout_marginEnd="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@id/logo"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/revision_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/revision_label"
                android:textSize="16sp"
                style="@style/fortune_text_primary" />

            <TextView
                android:id="@+id/revision_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"
                style="@style/fortune_text_secondary" />

            <TextView
                android:id="@+id/codename_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/codename_label"
                android:textSize="16sp"
                style="@style/fortune_text_primary" />

            <TextView
                android:id="@+id/codename_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"
                style="@style/fortune_text_secondary" />

            <TextView
                android:id="@+id/buildtype_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/buildtype_label"
                android:textSize="16sp"
                style="@style/fortune_text_primary" />

            <TextView
                android:id="@+id/buildtype_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" \
                android:textSize="1sp"
                style="@style/fortune_text_secondary" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>