<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fortune_firmware_banner_container"
    android:layout_width="match_parent"
    android:layout_height="125dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/fortune_firmware_banner_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="@dimen/fortune_pref_card_horizontal_padding"
        android:clipToPadding="false"
        app:cardBackgroundColor="#00000000"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/fortune_pref_card_radius">

        <FrameLayout
            android:layout_height="125dp"
            android:layout_width="match_parent"
            android:background="@drawable/fortune_pref_card_firmware-header">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/lulu_banner"
                android:scaleType="centerCrop"
                android:gravity="center"
                android:orientation="vertical" />

        </FrameLayout>

    </androidx.cardview.widget.CardView>
    
</FrameLayout>
